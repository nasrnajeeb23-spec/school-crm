NODE_ENV=development
PORT=5000

# Database (choose ONE: Either leave DATABASE_URL empty to use SQLite, or set to Postgres)
DATABASE_URL=
PG_SSL=false

# Session / Security
SESSION_SECRET=change_me_in_production
JWT_REFRESH_SECRET=change_me_refresh
CORS_ORIGIN=http://127.0.0.1:3000,http://localhost:3000
FRONTEND_URL=http://127.0.0.1:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=300
SUPER_ADMIN_IP_WHITELIST=127.0.0.1,::1

# SAML (Optional - set when enabling Enterprise SSO)
SAML_ENTRY_POINT=
SAML_ISSUER=school-crm
SAML_CERT=
SAML_PRIVATE_KEY=
SAML_LOGOUT_URL=
SAML_DECRYPTION_CERT=
SAML_SIGNING_CERT=

# Redis (Optional - for session store and caching)
REDIS_URL=

# HCaptcha (Optional - Web captcha verification)
HCAPTCHA_ENABLED=false
HCAPTCHA_SECRET=

# Invites
INVITE_TOKEN_EXPIRY_HOURS=72

# Licensing (Optional for self-hosted)
LICENSE_KEY=
