{
  "root": true,
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "ignorePatterns": [
    "node_modules/",
    "dev.sqlite",
    "logs/",
    "uploads/",
    "downloads/"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-console": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-control-regex": "warn",
    "no-useless-escape": "warn"
  }
}
